<UserControl x:Class="SIMS_Booking.UI.View.Startup.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:colorConverters="clr-namespace:SIMS_Booking.UI.Utility.ColorConverters"
             xmlns:components="clr-namespace:SIMS_Booking.Utility.Components"
             mc:Ignorable="d" Height="450" Width="500">

    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5, 10, 0, 0"/>
        </Style>

        <colorConverters:RoleConverter x:Key="RoleConverterKey"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Button Margin="10 10 170 0" Background="Transparent" BorderBrush="Transparent"
                        Command="{Binding NavigateBackCommand}">
                    <Image Height="30" Width="30" 
                           Source="../../Resources/Images/arrow.png"/>
                </Button>
                <TextBlock Text="SignUp" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"
                           Margin="0 10 0 0"></TextBlock>
            </WrapPanel>
            <WrapPanel Margin="0, 0, 0, 0">
                <StackPanel>
                    <Label FontSize="20" Margin="20, 20, 0, 0">Username:</Label>
                    <TextBox Text="{Binding Path=Username, ValidatesOnDataErrors=True, 
                             UpdateSourceTrigger=PropertyChanged}"                        
                             Height="30" Width="280" 
                     Margin="25, 0, 0, 0" Padding="0, 5, 0, 0" FontSize="16"
                     HorizontalAlignment="Left" BorderThickness="0 0 0 2">
                        <TextBox.ToolTip>
                            <TextBlock Text="{Binding ErrorCollection[Username]}"/>
                        </TextBox.ToolTip>
                    </TextBox>

                    <Label FontSize="20" Margin="20, 20, 0, 0">Password:</Label>
                    <components:BindablePasswordBox Height="30" Width="280" Margin="25 0 0 0" 
                        Padding="0 5 0 0" FontSize="16"
                        HorizontalAlignment="Left" 
                        Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <Label FontSize="20" Margin="20, 20, 0, 0">Confrim Password:</Label>
                    <components:BindablePasswordBox Height="30" Width="280" Margin="25 0 0 0" 
                        Padding="0 5 0 0" FontSize="16"
                        HorizontalAlignment="Left" 
                        Password="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <Label Name="passwordValidationLb" FontSize="10" Foreground="Red" Margin="20, 0, 0, 0" 
                           Visibility="{Binding ErrorText, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}">Passwords must be the same</Label>
                </StackPanel>

                <StackPanel Margin="60, 45, 0, 0">
                    <RadioButton x:Name="ownerRb" Content="Owner" 
                                 IsChecked="{Binding Role, Converter={StaticResource ResourceKey=RoleConverterKey}, ConverterParameter=Owner}"></RadioButton>
                    <RadioButton x:Name="guest1Rb" Content="Guest1" 
                                 IsChecked="{Binding Role, Converter={StaticResource ResourceKey=RoleConverterKey}, ConverterParameter=Guest1}"></RadioButton>
                    <RadioButton x:Name="guest2Rb" Content="Guest2" 
                                 IsChecked="{Binding Role, Converter={StaticResource ResourceKey=RoleConverterKey}, ConverterParameter=Guest2}"></RadioButton>
                    <RadioButton x:Name="driverRb" Content="Driver" 
                                 IsChecked="{Binding Role, Converter={StaticResource ResourceKey=RoleConverterKey}, ConverterParameter=Driver}"></RadioButton>
                    <RadioButton x:Name="guideRb" Content="Guide" 
                                 IsChecked="{Binding Role, Converter={StaticResource ResourceKey=RoleConverterKey}, ConverterParameter=Guide}"></RadioButton>
                    <Label HorizontalAlignment="Center" FontSize="20" Margin="0 20 0 0">Age:</Label>
                    <TextBox Margin="0 5 0 0" Padding="0 5 0 0" Height="25" 
                             BorderThickness="0 0 0 2"
                             Text="{Binding Age, ValidatesOnDataErrors=True, 
                             UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.ToolTip>
                            <TextBlock Text="{Binding ErrorCollection[Age]}"/>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
            </WrapPanel>
            <Button Command="{Binding SignUpCommand}" Content="SIGNUP" FontSize="16" Padding="5" Width="200"
                    Margin="0, 30, 0, 0" Name="signUpButton">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

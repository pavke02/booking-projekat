<Window x:Class="SIMS_Booking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view1="clr-namespace:SIMS_Booking.UI.View"
        xmlns:viewModel1="clr-namespace:SIMS_Booking.UI.ViewModel"
        xmlns:owner="clr-namespace:SIMS_Booking.UI.View.Owner"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <ContentControl Content="{Binding CurrentViewModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModel1:SignInViewModel }">
                <view1:SignInView></view1:SignInView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel1:SignUpViewModel }">
                <view1:SignUpView></view1:SignUpView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel1:OwnerMainViewModel }">
                <owner:OwnerMainView></owner:OwnerMainView>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>

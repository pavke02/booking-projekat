<Window x:Class="SIMS_Booking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:SIMS_Booking.UI.View"
        xmlns:viewModel="clr-namespace:SIMS_Booking.UI.ViewModel"
        xmlns:owner="clr-namespace:SIMS_Booking.UI.View.Owner"
        xmlns:viewModelOwner="clr-namespace:SIMS_Booking.UI.ViewModel.Owner"
        xmlns:modalControl="clr-namespace:ModalControl;assembly=ModalControl"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModel:SignInViewModel }">
                <view:SignInView></view:SignInView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:SignUpViewModel }">
                <view:SignUpView></view:SignUpView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModelOwner:OwnerMainViewModel }">
                <owner:OwnerMainView></owner:OwnerMainView>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModelOwner:GuestReviewViewModel }">
                <owner:GuestReviewView></owner:GuestReviewView>
            </DataTemplate>
        </Grid.Resources>

        <modalControl:Modal Panel.ZIndex="100" IsOpen="{Binding IsModalOpen}">
            <ContentControl Content="{Binding CurrentModalViewModel}"/>
        </modalControl:Modal>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
